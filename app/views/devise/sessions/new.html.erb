<!-- LOGIN PAGE -->
<!-- CSS file -> components/_login.scss -->

 <div class="container text-center">
    <!-- <i class="fas fa-film"></i> -->
    <h2>LOGIN</h2>
    <br>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, class: "email" %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, class: "password" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <br>

  <!-- <%= render "devise/shared/links" %> -->

    <div class="form-actions">
      <%= f.button :submit, "Login", class: "button-1" %>
    </div>
  <% end %>

  <br>
  <%= link_to "Sign up", new_user_registration_path, style: "color: white;" %>
