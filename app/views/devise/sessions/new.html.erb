<!-- LOGIN PAGE -->
<!-- CSS file -> components/_login.scss -->

<div class="login" >

  <div class="first-container">
    <i class="fas fa-film"></i>
    <h2 id="login">LOGIN</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, class: "email" %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, class: "password" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>



  <!-- <%= render "devise/shared/links" %> -->

    <div class="form-actions">
      <%= link_to "Sign up", new_user_registration_path, class: "button", id: "sign_up_btn" %>
      <%= f.button :submit, "Login", class: "button", id: "login_btn" %>
    </div>
  <% end %>
</end>
