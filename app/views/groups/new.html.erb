<!-- CREATE GROUP PAGE -->
<!-- CSS file -> components/_sign_up.scss -->

<div class="container">
  <div class="fas-logo">
    <i class="fas fa-film"></i>
    <h2 class="sign-up-header">Create Group</h2>
  </div>

  <div class="create-group-page">
    <%= simple_form_for @group do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :genre_id, collection: @genres %>
      <%= f.input :password, required: true %>
      <%= f.input :password_confirmation, required: true %>
      <%= f.submit %>
    <% end %>
  </div>
  <%= link_to 'Back', pages_friends_path, class: "previous"  %>
</div>
