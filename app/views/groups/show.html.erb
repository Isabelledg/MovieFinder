<!-- list/index of users -->
<i class="fas fa-film"></i>

<h1><%= @group.name %></h1>
<h3> Created by: </h3>
<h4><%= @user_group.user.name %></h4>
<h3> Group members: </h3>
<ul>
<% @group.users.each do |user| %>
<li><%= user.name  %></li>
<% end %>
</ul>
<%= simple_form_for [@group, UserGroup.new] do |f| %>
  <%= f.error_notification %>
    <%= f.input :password, required: true %>

    <%= f.submit 'Join' %>
  <% end %>

<div>
<%= link_to 'Back', groups_path, class: "previous"%>
</div>
