<!-- DISPLAY LIST/INDEX/DETAILS OF USERS/GROUPS -->
<!-- CSS file -> components/_group-show.scss -->

<div class= "group-info-container">

    <div class="group-card">
      <img class="img-genre"src="https://s.studiobinder.com/wp-content/uploads/2019/09/Movie-Genres-Types-of-Movies-List-of-Genres-and-Categories-Header-StudioBinder.jpg" />
      <div class="group-card-infos">
        <p id="groups-name"><b>GROUP NAME</b></p>
        <p><%= @group.name %></p>
        <p><b>MOVIE GENRE</b> <i class="fas fa-theater-masks"></i></p>
        <p><b>CREATED BY</b> <i class="fas fa-user-edit"></i></p>
        <p class="group-creator"><%= @user_group.user.name %></p>
        <p><b>GROUP MEMBERS</b> <i class="fas fa-users"></i></p>
        <ul>
          <% @group.users.each do |user| %>
            <li><%= user.name %></li>
          <% end %>
        </ul>
      </div>

  </div>

    <ul>
      <% @group.users.each do |user| %>
        <li><%= user.name %></li>
      <% end %>
    </ul>

    <% if current_user.groups.include?(@group) %>
      <h2>Welcome to your group!</h2  >
    <% else %>
      <%= simple_form_for [@group, UserGroup.new] do |f| %>
        <%= f.error_notification %>
        <%= f.input :password, required: true %>
        <%= f.submit 'Join' %>
      <% end %>
    <% end %>
    <div>
      <% if @empty_movies %>
        <%= link_to 'Start voting', group_movies_path(@group),  class: "button" %>
      <% else %>
        <% @user_group.movies.each do |movie| %>
          <p><%= movie.title %></p>
        <% end %>
      <% end %>
    </div>
    <br>

  </div>
  <div>
    <%= link_to 'Back', groups_path, class: "button", id: "back"%>
  </div>
</div>
